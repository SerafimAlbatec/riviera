            <!-- INFO SECTION -->
            <div class="grid-12">
                <h2>Make a Reservation</h2>
            </div>
            <!-- reservation form -->
            <form  role="form" id="contactForm" class="epikoinonia_form">
                <div class="grid-4">
                    <label>Name</label>
                    <input type="text" name="senderName" id="senderName" maxlength="40" required="required" />
                    <label>E-Mail</label>
                    <input type="email" name="senderEmail" id="senderEmail" required="required" maxlength="50" />
                    <label>Cell Number</label>
                    <input type="text" name="senderPhone" id="senderPhone" maxlength="40" />
                    <label>Date</label>
                    <input type="date" name="senderDate" id="senderDate" maxlength="50" />
                </div>
                <div class="grid-4">
                    <label>No of People</label>
                    <input type="text" name="senderNumber" id="senderNumber" maxlength="10" />
                    <label>Message</label>
                    <textarea name="message" id="message"></textarea>
                    <input id="sendMessage" name="sendMessage" class="button" value="Send" />
                </div> 
                <div class="grid-4">
                    <div class="contact-info">
                        <p>Address: Lorem str. 34/8 New York</p>
                        <p>Phone: 555-555-5555</p>
                        <p>E-mail: info@mysite.com</p>
                        <!-- SOCIAL ICONS -->
                        <ul class="icons">
                            <li>
                                <a href="https://www.facebook.com/riviera.beachbar.5" target="_blank">
