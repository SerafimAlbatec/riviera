<!-- Our Gallery -->
    <article class="our-gallery">
        <h2 class="caption">Our gallery</h2>
        <div class="center-align">
            <div class="line-cake">
                <div class="cake"></div>
                <div class="line left"></div>
                <div class="line right"></div>
            </div>
        </div>

        <div class="center-align content cf">
            <a href="#top" class="top"></a>

            <div class="filter-line cf">
                
                <a href="#">
                    
                </a>
                
            </div>

            <div class="gallery cf">

                <% @gallery.each do |c| %>

                  <div class="col-3">
                    <div class="background">
                        <a href=<%= gallery_gallery_path(:album => c.id) %>>
                            <div class="hover"></div>
                            <img src="/assets/our-gallery/<%= c.image %>" alt=""/>
                        </a>
                        <div class="shadow"></div>
                        <div class="pic"></div>
                        <a class="look" href=<%= gallery_gallery_path(:album => c.id) %>>content</a>
                    </div>
                </div>
                      
                <% end %>

                
            </div>
